<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paulaperez.rcc.MainActivity">



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
            >



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp"></LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >



               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/op1"
                   android:layout_weight="@dimen/textViewWeight"
                   />

               <Spinner
                   android:id="@+id/spinner1"
                   android:layout_width="0dp"
                   android:layout_weight="@dimen/spinnerWeight"
                   android:layout_height="wrap_content"/>
               <!--android:entries="@array/country_arrays"
                   android:prompt="@string/colorsR"-->


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/op2"
                   android:layout_weight="@dimen/textViewWeight"
                   />

               <Spinner
                   android:id="@+id/spinner2"
                   android:layout_width="0dp"
                   android:layout_weight="@dimen/spinnerWeight"
                   android:layout_height="wrap_content"/>
               <!--android:entries="@array/country_arrays"
                   android:prompt="@string/colorsR"-->


           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/op3"
                   android:layout_weight="@dimen/textViewWeight"
                   />

               <Spinner
                   android:id="@+id/spinner3"
                   android:layout_width="0dp"
                   android:layout_weight="@dimen/spinnerWeight"
                   android:layout_height="wrap_content"/>
               <!--android:entries="@array/country_arrays"
                   android:prompt="@string/colorsR"-->


           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/op4"
                   android:layout_weight="@dimen/textViewWeight"
                   />

               <Spinner
                   android:id="@+id/spinner4"
                   android:layout_width="0dp"
                   android:layout_weight="@dimen/spinnerWeight"
                   android:layout_height="wrap_content"/>
               <!--android:entries="@array/country_arrays"
                   android:prompt="@string/colorsT"-->


           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_gravity="center">

               <LinearLayout
                   android:id="@+id/spinnerc1"
                   android:layout_width="40dp"
                   android:layout_height="70dp"
                   android:background="@android:color/black"></LinearLayout>
               <LinearLayout
                   android:id="@+id/spinnerc2"

                   android:layout_width="40dp"
                   android:layout_height="70dp"
                   android:background="#FF7B3F07"
                   ></LinearLayout>
               <LinearLayout
                   android:id="@+id/spinnerc3"
                   android:layout_width="40dp"
                   android:layout_height="70dp"
                   android:background="@android:color/black"
                   ></LinearLayout>
               <LinearLayout
                   android:id="@+id/spinnerc4"

                   android:layout_width="40dp"
                   android:layout_height="70dp"
                   android:background="#FF7B3F07"
                   ></LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:orientation="vertical"
               >


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="10dp"></LinearLayout>
               <Button
                   android:id="@+id/comp"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:text="Compute"
                   android:textSize="20dp"
                   android:textAlignment="center"
                   android:background="#FF09090A"
                   android:textColor="@android:color/white"

                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="10dp"></LinearLayout>

               <TextView

                   android:id="@+id/tvResult"
                   android:layout_width="match_parent"
                   android:layout_height="90dp"
                   android:layout_gravity="center"
                   android:textAlignment="center"
                   android:textSize="40dp"
                   android:text="0"

                   android:textColor="@android:color/holo_green_dark"
                   />
               <TextView

                   android:id="@+id/tvTolerance"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:textAlignment="center"
                   android:textSize="50dp"
                   android:text="0"
                   android:textColor="@android:color/black"
                   />

           </LinearLayout>




       </LinearLayout>


</android.support.constraint.ConstraintLayout>
